#!/bin/bash
# commit-msg hook for nucleus
# Validates commit message follows conventional commits format

set -e

RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

COMMIT_MSG_FILE="$1"
COMMIT_MSG=$(cat "$COMMIT_MSG_FILE")

# Skip merge commits
if echo "$COMMIT_MSG" | grep -qE "^Merge"; then
    exit 0
fi

# Conventional commit pattern
# type(scope): description
# type: description
PATTERN="^(feat|fix|docs|style|refactor|test|chore|revert)(\([a-z0-9-]+\))?: .{1,72}$"

# Get first line only
FIRST_LINE=$(echo "$COMMIT_MSG" | head -1)

if ! echo "$FIRST_LINE" | grep -qE "$PATTERN"; then
    echo ""
    echo -e "${RED}❌ Invalid commit message format${NC}"
    echo ""
    echo "Expected format: type(scope): description"
    echo ""
    echo "Types: feat, fix, docs, style, refactor, test, chore, revert"
    echo ""
    echo "Examples:"
    echo "  feat: add loading states documentation"
    echo "  fix(ux): correct mobile touch target sizes"
    echo "  docs: update README with setup instructions"
    echo ""
    echo "Your message: $FIRST_LINE"
    echo ""
    echo -e "${YELLOW}Use --no-verify to skip this check.${NC}"
    exit 1
fi

# Check subject length (max 72 chars)
SUBJECT_LENGTH=${#FIRST_LINE}
if [ $SUBJECT_LENGTH -gt 72 ]; then
    echo ""
    echo -e "${RED}❌ Commit subject too long ($SUBJECT_LENGTH chars, max 72)${NC}"
    echo ""
    echo "Your message: $FIRST_LINE"
    echo ""
    exit 1
fi

echo -e "${GREEN}✅ Commit message valid${NC}"
exit 0
