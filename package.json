{
  "name": "bodhi-mcp",
  "version": "0.3.0",
  "description": "Synthesized decision frameworks for AI agents. Enlightenment through curated knowledge.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "bodhi-mcp": "./dist/cli.js"
  },
  "files": [
    "dist",
    "knowledge"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/cli.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test:run",
    "prepare": "husky"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "knowledge-base",
    "decision-frameworks",
    "bodhi",
    "team-bodhi"
  ],
  "author": "Team Bodhi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/5h1vmani/bodhi-mcp"
  },
  "bugs": {
    "url": "https://github.com/5h1vmani/bodhi-mcp/issues"
  },
  "homepage": "https://github.com/5h1vmani/bodhi-mcp#readme",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "minisearch": "^7.0.0",
    "gray-matter": "^4.0.3",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.0",
    "@commitlint/config-conventional": "^18.4.0",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "husky": "^9.0.0",
    "prettier": "^3.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
